{% block strix_ergonode_attribute_mapping_page %}
    <sw-page class="strix-ergonode__attribute-mapping-page">
        <template slot="content">
            <sw-card-view>
                <sw-tabs>
                    <sw-tabs-item
                        :active="true"
                    >{{ $t('StrixErgonode.tabs.attributeMappings') }}</sw-tabs-item>
                </sw-tabs>
                <sw-skeleton v-if="isLoading"></sw-skeleton>
                <template v-else>
                    <sw-card
                        :title="$t('StrixErgonode.mappings.addAttributeMapping')"
                    >
                        <sw-single-select
                            :label="$t('StrixErgonode.mappings.shopwareAttribute')"
                            :options="shopwareAttributesSelectOptions"
                            v-model="createShopwareAttribute"
                        >
                        </sw-single-select>
                        <sw-single-select
                            :label="$t('StrixErgonode.mappings.ergonodeAttribute')"
                            :options="ergonodeAttributesSelectOptions"
                            v-model="createErgonodeAttribute"
                        >
                        </sw-single-select>
                        <sw-button
                            variant="primary"
                            :isLoading="isCreateLoading"
                            :disabled="buttonDisabled"
                            @click="addMapping"
                        >
                            {{ $t('StrixErgonode.mappings.addAttributeMapping') }}
                        </sw-button>
                        <sw-label v-if="mappingAlreadyExists"
                                  variant="danger"
                        >
                            {{ $t('StrixErgonode.mappings.messages.mappingAlreadyExists') }}
                        </sw-label>
                    </sw-card>
                    <sw-card
                        class="strix-ergonode__attribute-mapping-grid-card"
                        :title="$t('StrixErgonode.mappings.attributeMappings')"
                    >
                        <template #default>
                            <sw-entity-listing
                                class="strix-ergonode__attribute-mapping-grid"
                                :columns="columns"
                                :items="mappings"
                                :repository="repository"
                                :fullPage="false"
                                :allow-delete="true"
                                :allow-edit="true"
                                :allow-inline-edit="true"
                                :is-loading="isMappingLoading"
                            >
                            </sw-entity-listing>
                        </template>
                    </sw-card>
                </template>
            </sw-card-view>
        </template>
    </sw-page>
{% endblock %}
